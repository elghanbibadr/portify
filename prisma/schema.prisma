generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


enum Role {
  ADMIN
  CLIENT
}

enum ProjectStatus {
  PENDING
  IN_PROGRESS
  COMPLETED
  CANCELLED
}
// MODEL
model User{
 id Int @id @default(autoincrement())
 fullName String 
  email       String      @unique
  password    String
  role        Role
    createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  // projectsAsFreelancer  Project[]


}

model project{
  id Int @id @default(autoincrement())
  title String
  description String
  due_date DateTime 
  createdAt DateTime @default(now())
  status ProjectStatus
}